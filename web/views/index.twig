  <script>
    let totalPage = 3;
    let page = 2;
    function pullUpLoad() {
      //console.log("pullUpLoad called.");
      if(page<=totalPage){
        //console.log("page "+page+" loaded.");
        $.ajax({
          type: "GET",
          url: "/views/"+page+".html?v=1.5",
          dataType: "html",
          async: false,
          success: function(data){
            page++;
            $("#refreshContainer").append(data);

