  <script>
    let totalPage = 3;
    let page = 2;
    function pullUpLoad() {
      //console.log("pullUpLoad called.");
      if(page<=totalPage){
        //console.log("page "+page+" loaded.");
        $.ajax({
          type: "GET",
          url: "/views/"+page+".html?v=1.6",
          dataType: "html",
          async: false,
          success: function(data){
            page++;
            $("#refreshContainer").append(data);

            //css
            $( ".columns" ).each(function( index ) {
              if(index > 4){
                $(".columns:nth-child("+index+")").css("margin-top","-10rem");
              }
            });

          }
        });

      }
      $('#pullUpText').css("display","none");
    }

  </script>

